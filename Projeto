mrpto=$(dialog --stdout --title "Gerenciamento de Pacotes"\
	    --menu "Escolha uma opcao" 0 0 0 	\
1 "Instalar Pacote"		 \
2 "Desinstalar Pacote"		 \
3 "Listar Pacotes"		 \
4 "Voltar")

case $mrpto in

1) ipct ;;
2) dpct ;;
3) lpct ;;
4) volu ;;
esac
}
##################### FIM MENU GERENCIAMENTO DE PACOTES #######################

################### MENU GERENCIAMENTO DE PERMISIONAMENTO #####################
