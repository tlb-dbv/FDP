mrede=$(dialog --stdout --title "Gerenciamento de Interface de Rede"\
	    --menu "Escolha uma opcao" 0 0 0 	\
1 "Configurar Interface de rede"		\
2 "Configurar nome da maquina"			\
3 "Voltar")

case $mrede in

1) coni ;;
2) conh ;;
3) volu ;;
esac
}
##################### FIM DO MENU GERENCIAMENTO DE REDES ######################

